---
import Section from "../Section.astro"

import { education } from "@cv"
---

<Section title="ðŸŽ“EducaciÃ³n">
  <ul>
    {
      education.map(({ image, institution, color, startDate, endDate, area }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <img src={image} alt={institution} width="80" />
            <article>
              <header>
                <div>
                  <h3 style={`color: ${color};`}>{institution}</h3>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  li {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
  }

  article {
    width: 100%;
  }

  img{
    aspect-ratio: 560/380;
    object-fit: contain;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
