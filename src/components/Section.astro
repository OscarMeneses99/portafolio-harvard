---
// se ejecuta en el servidor o en build time <----
const { title } = Astro.props

let image: string | undefined
switch (title) {
	case "Sobre mí":
		image = "/about.png"
		break
	case "Experiencia laboral":
		image = "/work.png"
		break
	case "Educación":
		image = "/education.png"
		break
	case "Proyectos":
		image = "/projects.png"
		break
	case "Habilidades":
		image = "/skills.png"
		break
}
---

<section>
    <div>
      {
        title && (
          <img src={image} alt={title} width="30" />
          <h2>{title}</h2>
        )
      }
      
    </div>
  <slot />
</section>

<script>
  // se ejecuta en el cliente <----
</script>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 48px;
  }

  div {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  img {
    aspect-ratio: 1/1;
    object-fit: contain;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
